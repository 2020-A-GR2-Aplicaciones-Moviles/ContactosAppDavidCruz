<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/textCorreo"
        android:layout_width="107dp"
        android:layout_height="39dp"
        android:layout_marginTop="20dp"
        android:fontFamily="monospace"
        android:text="Email"
        android:textAlignment="center"
        android:textSize="25dp"
        app:layout_constraintEnd_toStartOf="@+id/editTextTextEmailAddress"
        app:layout_constraintHorizontal_bias="0.185"
        app:layout_constraintStart_toStartOf="@+id/text2"
        app:layout_constraintTop_toBottomOf="@+id/text2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="200dp"
        android:layout_height="39dp"
        android:layout_marginTop="28dp"
        android:text="Ingrese el usuario y contraseÃ±a que quiere crear y pusel AQUI"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/login_bt"
        android:layout_width="92dp"
        android:layout_height="54dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="24dp"
        android:text="Login"
        app:layout_constraintEnd_toEndOf="@+id/passwordEt"
        app:layout_constraintHorizontal_bias="0.008"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="144dp"
        android:layout_height="23dp"
        android:layout_marginTop="12dp"
        android:text="Keep session started?"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/checkBoxRecordar"
        app:layout_constraintStart_toStartOf="@+id/checkBoxRecordar"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxRecordar" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="165dp"
        android:layout_height="49dp"
        android:drawableStart="@mipmap/user"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/textCorreo"
        app:layout_constraintEnd_toEndOf="@+id/text2"
        app:layout_constraintTop_toTopOf="@+id/textCorreo" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="138dp"
        android:layout_height="38dp"
        android:layout_marginTop="24dp"
        android:fontFamily="monospace"
        android:text="Password"
        android:textAlignment="center"
        android:textSize="25dp"
        app:layout_constraintEnd_toStartOf="@+id/passwordEt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textCorreo"
        app:layout_constraintTop_toBottomOf="@+id/textCorreo" />

    <TextView
        android:id="@+id/text1"
        style="@android:style/Widget.DeviceDefault.Light.TextView.SpinnerItem"
        android:layout_width="237dp"
        android:layout_height="47dp"
        android:backgroundTint="@color/colorAccent"
        android:breakStrategy="high_quality"
        android:contentDescription="Bienvenida"
        android:fontFamily="@font/gameria_demo"
        android:text="Bienvenido"
        android:textAlignment="center"
        android:textColor="@android:color/primary_text_light"
        android:textSize="40dp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.046" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="326dp"
        android:layout_height="59dp"
        android:layout_marginTop="13dp"
        android:fontFamily="@font/gameria_demo"
        android:text="Inicie sesion en KerberosContactos"
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/text1"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/text1"
        app:layout_constraintTop_toBottomOf="@+id/text1"
        app:layout_constraintVertical_bias="0.005" />

    <EditText
        android:id="@+id/passwordEt"
        android:layout_width="164dp"
        android:layout_height="44dp"
        android:drawableStart="@mipmap/key"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextEmailAddress"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

    <CheckBox
        android:id="@+id/checkBoxRecordar"
        android:layout_width="32dp"
        android:layout_height="28dp"
        android:layout_marginTop="20dp"
        android:checked="true"
        app:layout_constraintEnd_toEndOf="@+id/login_bt"
        app:layout_constraintStart_toStartOf="@+id/login_bt"
        app:layout_constraintTop_toBottomOf="@+id/login_bt" />

    <Button
        android:id="@+id/buttonRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Registrarse"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>